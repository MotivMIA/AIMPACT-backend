{
"compilerOptions": {
"target": "ES2020",
"module": "ESNext",
"moduleResolution": "node",
"esModuleInterop": true,
"forceConsistentCasingInFileNames": true,
"strict": true,
"skipLibCheck": true,
"outDir": "./dist",
"rootDir": "./src",
"typeRoots": ["./node_modules/@types", "types"]
},
"include": ["src//*", "types//*"],
"exclude": ["node_modules"],
"ts-node": {
"esm": true
}
}
